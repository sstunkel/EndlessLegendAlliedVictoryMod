  <GameModifierDefinition Name="GameSpeedFast">
    <DescriptorTypeToRemove>GameSpeedBonus</DescriptorTypeToRemove>
    
    <!-- Major Empire -->
    <Effects>
      <PathPrerequisite>../EmpireTypeMajor</PathPrerequisite>
      <SimulationDescriptorReference Name="GameSpeedFastMajorEmpire"/>
      <PersonalityReference Name="PersonalityMajorFactionGameSpeedFast" />
    </Effects>
    
    <!-- Minor -->
    <Effects>
      <PathPrerequisite>../EmpireTypeMinor</PathPrerequisite>
      <SimulationDescriptorReference Name="GameSpeedFastMinorEmpire"/>
      <PersonalityReference Name="PersonalityMinorFactionGameSpeedFast" />
    </Effects>

    <!-- Lesser -->
    <Effects>
      <PathPrerequisite>../AffinityLesser</PathPrerequisite>
      <SimulationDescriptorReference Name="GameSpeedFastLesserEmpire"/>
    </Effects>
  </GameModifierDefinition>


